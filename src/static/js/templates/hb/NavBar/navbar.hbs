        <div class="navbar-right nav-actions unlogged">
            <ul class="nav navbar-nav actions-in-navbar">
                <li><a href="#" class="shopcart-toggle"><span class="glyphicon glyphicon-shopping-cart"></span> My shopcart</a></li>
            </ul>
            <button type="button" id="signInAction" data-toggle="modal" data-target="#signInModal" class="btn btn-default navbar-btn">Sign in</button>
            <button type="button" id="signUpAction" data-toggle="modal" data-target="#signUpModal" class="btn btn-success navbar-btn">Sign up</button>
