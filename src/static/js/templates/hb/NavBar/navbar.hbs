        <a class="navbar-brand" href="#"><span class="glyphicon glyphicon-book"></span> Another Yet Book Store</a>
    </div>
    <div class="clearfix collapse navbar-collapse" id="headerNavBarCollapse">
        {{#if user}}
        <ul class="nav navbar-nav navbar-right">
            <li><a href="#" class="shopcart-toggle"><span class="glyphicon glyphicon-shopping-cart"></span> My shopcart</a></li>
            <li><a href="#profile"><span class="glyphicon glyphicon-user"></span> {{user.username}}</a></li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">User menu <b class="caret"></b></a>
