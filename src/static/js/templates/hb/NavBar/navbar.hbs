{{#unless user}}
<div class="modal fade" id="signInModal" tabindex="-1" role="dialog" aria-labelledby="signInModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content modal-sign-in">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Sign in</h4>
            </div>
            <div class="modal-body">
                <form id="signInForm">
                    <div class="form-group">
                        <label for="signInForm_Login">Login / email</label>
                        <input type="text" class="form-control" id="signInForm_Login" placeholder="Enter your login">
                    </div>
                    <div class="form-group">
                        <label for="signInForm_Password">Password</label>
                        <input type="password" class="form-control" id="signInForm_Password" placeholder="Enter password">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success" id="signInSubmit">Sign in</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="signUpModal" tabindex="-1" role="dialog" aria-labelledby="signUpModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="signUpModalLabel">Sign up</h4>
            </div>
            <div class="modal-body clearfix">
                <form id="signUpForm">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="signUpForm_Username">Username</label>
                            <input type="text" class="form-control" id="signUpForm_Username" placeholder="Enter your username">
                        </div>
                        <div class="form-group">
                            <label for="signUpForm_Email">Email</label>
                            <input type="text" class="form-control" id="signUpForm_Email" placeholder="Enter your email">
                        </div>
                        <div class="form-group">
                            <label for="signUpForm_Password">Password</label>
                            <input type="password" class="form-control" id="signUpForm_Password" placeholder="Enter password">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="text-center register-avatar">
                            <img class="img-rounded img-rounded" src="static/img/users/default.png" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success" id="signUpSubmit">Sign up</button>
            </div>
        </div>
    </div>
</div>
{{/unless}}